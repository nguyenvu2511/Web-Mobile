@model Web_Mobile.Models.LoaiSanPham

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdnin.cshtml";
}

<h2>THÊM MỚI</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>LOẠI SẢN PHẨM</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="HoTen">Loại SP:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLSP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
