@model IEnumerable<Web_Mobile.Models.Admin>

@{
    ViewBag.Title = "TaiKhoan";
    Layout = "~/Views/Shared/_LayoutAdnin.cshtml";
}

<h2>QUẢN LÝ TÀI KHOẢN ADMIN</h2>

<p>
    @Html.ActionLink("Thêm Tài Khoản", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tài Khoản
        </th>
        <th>
            Mật Khẩu
        </th>
        <th>
            Họ Tên
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.UserAdmin)
        </td>
	<td>
            @Html.DisplayFor(modelItem => item.PassAdmin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoTen)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.UserAdmin }) |
            @Html.ActionLink("Chi Tiết", "Details", new { id=item.UserAdmin }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.UserAdmin })
        </td>
    </tr>
}

</table>
