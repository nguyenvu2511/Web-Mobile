@model IEnumerable<Web_Mobile.Models.CHITIETDONTHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdnin.cshtml";
}
@{
    // define format VND
    var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã Đơn Hàng
        </th>
        <th>
            Sản Phẩm
        </th>
        <th>
            Số Lượng
        </th>
        <th>
            Đơn Giá
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaDH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SanPham.TenSP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Soluong)
        </td>
        <td>
            @String.Format(format, "{0:c0}", item.Dongia)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.MaDH}) |
            @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaDH }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaDH })
        </td>
    </tr>
}

</table>
